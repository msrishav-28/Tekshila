{
  "functions": {
    "api/*.py": {
      "runtime": "@vercel/python"
    }
  },
  "rewrites": [
    { "source": "/", "destination": "/frontend/index.html" },
    { "source": "/login.html", "destination": "/frontend/login.html" },
    { "source": "/styles.css", "destination": "/frontend/styles.css" },
    { "source": "/api/(.*)", "destination": "/api/$1" }
  ]
}